{
  "name": "@openfun/cunningham-tokens",
  "private": false,
  "version": "0.0.5",
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./default-tokens": "./dist/cunningham-tokens.css"
  },
  "bin": {
    "cunningham": "./dist/cunningham.js"
  },
  "files": [
    "./dist/"
  ],
  "scripts": {
    "lint": "eslint . 'src/**/*.ts?(x)'",
    "dev": "nodemon --watch src --ext '*' --exec npm run build",
    "dev-bin": "nodemon --watch 'src/bin' --ext '*' --exec 'yarn build-bin && yarn build-theme'",
    "build": "tsc && vite build",
    "build-bin": "tsc -p src/bin/tsconfig.json && cp src/bin/cunningham.dist.js dist && chmod +x dist/cunningham.js",
    "build-theme": "cunningham -o dist -s html"
  },
  "dependencies": {
    "@types/figlet": "1.5.5",
    "@types/node": "18.11.9",
    "chalk": "5.1.2",
    "commander": "9.4.1",
    "deepmerge": "4.2.2",
    "eslint-config-custom": "*",
    "figlet": "1.5.2",
    "nodemon": "2.0.20",
    "prettier": "2.8.0",
    "typescript": "4.9.3",
    "vite": "3.2.4",
    "vite-plugin-dts": "1.7.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
